int x;
int *y = &x;

void swap(int *x, int *y){
    int tmp = *x;
    *x = *y;
    *y = tmp; 
}

void main() {
    assert(*y == 0); //global *y -> global x
    x = 1;
    assert(*y == 1);
    *y = 2;
    assert(x == 2);

    int a = 3;
    int b = 42;
    swap(&a, &b);
    assert(a == 42);
    assert(b == 3);

    int *x, *y = &b; //local *x and *y shadows the global ones
    x = &a;
    swap(x, y);
    assert(a == 3);
    assert(b == 42);
    assert(*x == 3);
    assert(*y == 42);
}

